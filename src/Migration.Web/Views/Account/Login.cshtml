@model DMS.Migration.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Use standalone layout for login page
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Data Migration Platform</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/images/favicon.svg">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">

    <!-- iCheck Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/icheck-bootstrap@3.0.1/icheck-bootstrap.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body.login-page {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #7e22ce 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            position: relative;
            overflow: hidden;
        }

        /* Animated background particles */
        .login-page::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(255, 255, 255, 0.03) 0%, transparent 50%);
            animation: backgroundShift 20s ease infinite;
        }

        @@keyframes backgroundShift {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.8;
            }
        }

        .login-box {
            width: 440px;
            position: relative;
            z-index: 1;
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-logo {
            margin-bottom: 25px;
            text-align: center;
        }

        .login-logo a {
            color: #ffffff;
            font-size: 2rem;
            font-weight: 700;
            text-decoration: none;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s ease;
        }

        .login-logo a:hover {
            transform: scale(1.02);
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
        }

        .login-logo i {
            font-size: 2.2rem;
            background: linear-gradient(135deg, #60a5fa, #a78bfa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .card {
            border: none;
            border-radius: 16px;
            box-shadow:
                0 20px 60px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.98);
            overflow: hidden;
        }

        .login-card-body {
            padding: 40px 35px;
            background: linear-gradient(to bottom, #ffffff 0%, #f8fafc 100%);
        }

        .login-box-msg {
            text-align: center;
            font-size: 1.1rem;
            font-weight: 500;
            color: #475569;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e2e8f0;
        }

        .input-group {
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

        .input-group:focus-within {
            transform: translateY(-2px);
        }

        .form-control {
            border: 2px solid #e2e8f0;
            border-right: none;
            height: 48px;
            font-size: 15px;
            padding: 12px 16px;
            transition: all 0.3s ease;
            background: #ffffff;
        }

        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            background: #ffffff;
        }

        .form-control::placeholder {
            color: #94a3b8;
        }

        .input-group-append .input-group-text {
            background: #ffffff;
            border: 2px solid #e2e8f0;
            border-left: none;
            color: #64748b;
            transition: all 0.3s ease;
            padding: 0 16px;
        }

        .input-group:focus-within .input-group-text {
            border-color: #3b82f6;
            color: #3b82f6;
        }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            display: block;
            margin-top: -15px;
            margin-bottom: 10px;
            padding-left: 4px;
        }

        .icheck-primary {
            display: flex;
            align-items: center;
            gap: 8px;
            margin: 0;
        }

        .icheck-primary input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .icheck-primary label {
            margin: 0;
            cursor: pointer;
            font-size: 14px;
            color: #64748b;
            user-select: none;
        }

        .btn-login {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border: none;
            height: 48px;
            font-weight: 600;
            font-size: 15px;
            letter-spacing: 0.3px;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
            transition: all 0.3s ease;
            color: #ffffff;
        }

        .btn-login:hover {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.5);
            color: #ffffff;
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .alert {
            border-radius: 10px;
            border: none;
            margin-bottom: 25px;
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-danger {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.2);
        }

        .alert-danger .icon {
            color: #dc2626;
        }

        .security-note {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
        }

        .security-note small {
            color: #64748b;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .security-note i {
            color: #10b981;
        }

        .dev-credentials {
            margin-top: 20px;
            animation: slideUp 0.6s ease-out 0.2s both;
        }

        .dev-credentials .card {
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .dev-credentials .card-body {
            padding: 20px;
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        }

        .dev-credentials h6 {
            color: #92400e;
            font-weight: 600;
            margin-bottom: 12px;
        }

        .dev-credentials small {
            color: #78350f;
            line-height: 1.8;
        }

        .dev-credentials strong {
            color: #451a03;
        }

        @@media (max-width: 576px) {
            .login-box {
                width: 95%;
                margin: 0 auto;
            }

            .login-card-body {
                padding: 30px 25px;
            }

            .login-logo a {
                font-size: 1.6rem;
            }

            .row .col-7,
            .row .col-5 {
                width: 100%;
                max-width: 100%;
                flex: 0 0 100%;
            }

            .row .col-7 {
                margin-bottom: 15px;
            }

            .btn-login {
                width: 100%;
            }
        }

        /* Loading state */
        .btn-login.loading {
            pointer-events: none;
            opacity: 0.7;
        }

        .btn-login.loading::after {
            content: '';
            display: inline-block;
            width: 16px;
            height: 16px;
            margin-left: 8px;
            border: 2px solid #ffffff;
            border-top-color: transparent;
            border-radius: 50%;
            animation: spin 0.6s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <!-- Logo -->
        <div class="login-logo">
            <a href="/">
                <i class="fas fa-database"></i>
                <b>Data Migration</b> Platform
            </a>
        </div>

        <!-- Login Card -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">
                    <i class="fas fa-lock mr-2" style="color: #3b82f6;"></i>
                    Sign in to start your session
                </p>

                <!-- Error Messages -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-exclamation-circle"></i> Authentication Failed</h5>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger mb-0" })
                    </div>
                }

                <!-- Login Form -->
                <form asp-action="Login" asp-controller="Account" method="post" id="loginForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />

                    <!-- Email Input -->
                    <div class="input-group">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address"
                            autocomplete="username" required autofocus>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <!-- Password Input -->
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password"
                            autocomplete="current-password" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <!-- Remember Me & Submit -->
                    <div class="row align-items-center mt-3">
                        <div class="col-7">
                            <div class="icheck-primary">
                                <input asp-for="RememberMe" type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="col-5">
                            <button type="submit" class="btn btn-primary btn-block btn-login" id="loginBtn">
                                <i class="fas fa-sign-in-alt mr-2"></i>Sign In
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Security Note -->
                <div class="security-note">
                    <small>
                        <i class="fas fa-shield-alt"></i>
                        Secure authentication with encrypted connection
                    </small>
                </div>
            </div>
        </div>

        <!-- Development Credentials (Only in Development) -->
        @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
        {
            <div class="dev-credentials">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-center">
                            <i class="fas fa-code mr-2"></i>Development Credentials
                        </h6>
                        <small>
                            <strong>Administrator:</strong> admin@@dms.local / Admin@@123<br />
                            <strong>Operator:</strong> operator@@dms.local / Operator@@123<br />
                            <strong>Viewer:</strong> viewer@@dms.local / Viewer@@123
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Toast Container -->
    @await Html.PartialAsync("_ToastHost")

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <!-- Toast Script -->
    <script src="~/js/toast.js"></script>

    <!-- Login Form Enhancement -->
    <script>
        $(document).ready(function () {
            // Form submission with loading state
            $('#loginForm').on('submit', function () {
                var $btn = $('#loginBtn');
                $btn.addClass('loading').prop('disabled', true);
                $btn.html('<i class="fas fa-spinner fa-spin mr-2"></i>Signing in...');
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert-danger').fadeOut('slow');
            }, 5000);

            // Add input focus effects
            $('.form-control').on('focus', function () {
                $(this).parent('.input-group').addClass('focused');
            }).on('blur', function () {
                $(this).parent('.input-group').removeClass('focused');
            });

            // Email validation on blur
            $('input[type="email"]').on('blur', function () {
                var email = $(this).val();
                var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                if (email && !emailRegex.test(email)) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Remove validation error on input
            $('.form-control').on('input', function () {
                $(this).removeClass('is-invalid');
                $(this).siblings('.text-danger').fadeOut();
            });
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>