@model IEnumerable<DMS.Migration.Domain.Entities.MigrationJob>
@using DMS.Migration.Domain.Enums

@{
    ViewData["Title"] = "Migration Jobs";
}

<h2>Migration Jobs</h2>

<form asp-action="CreateQuickJob" method="post" class="mb-3">
    <button type="submit" class="btn btn-primary">+ New Discovery Job</button>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th>Created</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><span class="badge bg-info">@item.Type</span></td>
                <td>
                    @if (item.Status == JobStatus.Running)
                    {
                        <span class="spinner-border spinner-border-sm text-primary"></span>
                    }
                    @item.Status
                </td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@item.CompletedAt?.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>