@model dynamic

@{
    var modalId = Model?.Id ?? "confirmModal";
    var title = Model?.Title ?? "Confirm Action";
    var message = Model?.Message ?? "Are you sure you want to proceed?";
    var confirmText = Model?.ConfirmText ?? "Confirm";
    var confirmClass = Model?.ConfirmClass ?? "btn-primary";
}

<!-- Confirmation Modal -->
<div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@(modalId)Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@(modalId)Label">@title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @message
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn @confirmClass" id="@(modalId)Confirm">@confirmText</button>
            </div>
        </div>
    </div>
</div>