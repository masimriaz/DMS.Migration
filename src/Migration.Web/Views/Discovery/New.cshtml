@model DMS.Migration.Web.Models.NewDiscoveryViewModel
@{
    ViewData["Title"] = "New Discovery Run";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">
                    <i class="fas fa-search-plus mr-2"></i>New Discovery Run
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <form asp-action="New" method="post">
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Discovery Configuration</h3>
                </div>
                <div class="card-body">

                    @if (!Model.AvailableConnections.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            No source connections available. Please <a href="/Connections/Wizard">create a connection</a>
                            first.
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="RunName"></label>
                                    <input asp-for="RunName" class="form-control"
                                        placeholder="e.g., Production SharePoint Discovery" />
                                    <span asp-validation-for="RunName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SourceConnectionId"></label>
                                    <select asp-for="SourceConnectionId" class="form-control">
                                        <option value="">-- Select Connection --</option>
                                        @foreach (var conn in Model.AvailableConnections)
                                        {
                                            <option value="@conn.Id">@conn.Name (@conn.Type)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="SourceConnectionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ScopeUrl"></label>
                            <input asp-for="ScopeUrl" class="form-control"
                                placeholder="https://contoso.sharepoint.com/sites/sitename" />
                            <small class="form-text text-muted">
                                Enter the root URL to scan. For site collections, use the full site URL. For entire tenant,
                                use root URL.
                            </small>
                            <span asp-validation-for="ScopeUrl" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />

                        <h5 class="mb-3">Scan Options</h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input asp-for="ScanVersioning" class="custom-control-input" type="checkbox"
                                        id="scanVersioning" />
                                    <label class="custom-control-label" for="scanVersioning">
                                        <strong>Scan Versioning Settings</strong>
                                        <br /><small class="text-muted">Check version limits and average version
                                            counts</small>
                                    </label>
                                </div>

                                <div class="custom-control custom-checkbox mb-3">
                                    <input asp-for="ScanPermissions" class="custom-control-input" type="checkbox"
                                        id="scanPermissions" />
                                    <label class="custom-control-label" for="scanPermissions">
                                        <strong>Scan Permissions</strong>
                                        <br /><small class="text-muted">Identify unique permissions and permission
                                            complexity</small>
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input asp-for="ScanCheckedOutFiles" class="custom-control-input" type="checkbox"
                                        id="scanCheckedOut" />
                                    <label class="custom-control-label" for="scanCheckedOut">
                                        <strong>Scan Checked-Out Files</strong>
                                        <br /><small class="text-muted">Detect files that are currently checked out</small>
                                    </label>
                                </div>

                                <div class="custom-control custom-checkbox mb-3">
                                    <input asp-for="ScanCustomPages" class="custom-control-input" type="checkbox"
                                        id="scanCustomPages" />
                                    <label class="custom-control-label" for="scanCustomPages">
                                        <strong>Scan Custom Pages & Web Parts</strong>
                                        <br /><small class="text-muted">Identify custom pages and web part usage
                                            (slower)</small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="MaxDepth"></label>
                                    <input asp-for="MaxDepth" type="number" class="form-control" min="1" max="10" />
                                    <small class="form-text text-muted">
                                        Maximum depth to scan subsites (1-10)
                                    </small>
                                    <span asp-validation-for="MaxDepth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div class="card-footer">
                    @if (Model.AvailableConnections.Any())
                    {
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-play mr-1"></i> Start Discovery
                        </button>
                    }
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times mr-1"></i> Cancel
                    </a>
                </div>
            </div>

        </form>

        <!-- Info Card -->
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-info-circle mr-2"></i>What is Discovery?
                </h3>
            </div>
            <div class="card-body">
                <p>Discovery scans your SharePoint environment to inventory:</p>
                <ul>
                    <li><strong>Site Structure:</strong> Site collections, sites, subsites</li>
                    <li><strong>Content:</strong> Lists, libraries, document counts, total size</li>
                    <li><strong>Metadata:</strong> Content types, columns, views</li>
                    <li><strong>Features:</strong> Versioning, permissions, workflows</li>
                    <li><strong>Issues:</strong> Checked-out files, broken links, customizations</li>
                </ul>
                <p class="mb-0">
                    <strong>Use discovery to:</strong> Plan migrations, identify issues, generate reports, and
                    understand your environment.
                </p>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}