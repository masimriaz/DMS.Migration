@model DMS.Migration.Web.Models.ConnectionViewModel

<div class="row mb-4">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <div class="wizard-stepper">
                    <div class="row">
                        <div class="col text-center">
                            <div class="stepper-item @(Model.CurrentStep >= 1 ? "active" : "") @(Model.CurrentStep > 1 ? "completed" : "")"
                                data-step="1">
                                <div
                                    class="stepper-icon @(Model.CurrentStep >= 1 ? "bg-primary" : "bg-secondary") @(Model.CurrentStep > 1 ? "bg-success" : "")">
                                    @if (Model.CurrentStep > 1)
                                    {
                                        <i class="fas fa-check"></i>
                                    }
                                    else
                                    {
                                        <span>1</span>
                                    }
                                </div>
                                <div class="stepper-label mt-2">
                                    <small class="d-block font-weight-bold">Step 1</small>
                                    <small class="text-muted">Basics</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <div class="stepper-line @(Model.CurrentStep > 1 ? "completed" : "")"></div>
                        </div>
                        <div class="col text-center">
                            <div class="stepper-item @(Model.CurrentStep >= 2 ? "active" : "") @(Model.CurrentStep > 2 ? "completed" : "")"
                                data-step="2">
                                <div
                                    class="stepper-icon @(Model.CurrentStep >= 2 ? "bg-primary" : "bg-secondary") @(Model.CurrentStep > 2 ? "bg-success" : "")">
                                    @if (Model.CurrentStep > 2)
                                    {
                                        <i class="fas fa-check"></i>
                                    }
                                    else
                                    {
                                        <span>2</span>
                                    }
                                </div>
                                <div class="stepper-label mt-2">
                                    <small class="d-block font-weight-bold">Step 2</small>
                                    <small class="text-muted">Authentication</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <div class="stepper-line @(Model.CurrentStep > 2 ? "completed" : "")"></div>
                        </div>
                        <div class="col text-center">
                            <div class="stepper-item @(Model.CurrentStep >= 3 ? "active" : "") @(Model.CurrentStep > 3 ? "completed" : "")"
                                data-step="3">
                                <div
                                    class="stepper-icon @(Model.CurrentStep >= 3 ? "bg-primary" : "bg-secondary") @(Model.CurrentStep > 3 ? "bg-success" : "")">
                                    @if (Model.CurrentStep > 3)
                                    {
                                        <i class="fas fa-check"></i>
                                    }
                                    else
                                    {
                                        <span>3</span>
                                    }
                                </div>
                                <div class="stepper-label mt-2">
                                    <small class="d-block font-weight-bold">Step 3</small>
                                    <small class="text-muted">Endpoint</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <div class="stepper-line @(Model.CurrentStep > 3 ? "completed" : "")"></div>
                        </div>
                        <div class="col text-center">
                            <div class="stepper-item @(Model.CurrentStep >= 4 ? "active" : "") @(Model.CurrentStep > 4 ? "completed" : "")"
                                data-step="4">
                                <div
                                    class="stepper-icon @(Model.CurrentStep >= 4 ? "bg-primary" : "bg-secondary") @(Model.CurrentStep > 4 ? "bg-success" : "")">
                                    @if (Model.CurrentStep > 4)
                                    {
                                        <i class="fas fa-check"></i>
                                    }
                                    else
                                    {
                                        <span>4</span>
                                    }
                                </div>
                                <div class="stepper-label mt-2">
                                    <small class="d-block font-weight-bold">Step 4</small>
                                    <small class="text-muted">Verification</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <div class="stepper-line @(Model.CurrentStep > 4 ? "completed" : "")"></div>
                        </div>
                        <div class="col text-center">
                            <div class="stepper-item @(Model.CurrentStep >= 5 ? "active" : "") @(Model.CurrentStep > 5 ? "completed" : "")"
                                data-step="5">
                                <div
                                    class="stepper-icon @(Model.CurrentStep >= 5 ? "bg-primary" : "bg-secondary") @(Model.CurrentStep > 5 ? "bg-success" : "")">
                                    @if (Model.CurrentStep > 5)
                                    {
                                        <i class="fas fa-check"></i>
                                    }
                                    else
                                    {
                                        <span>5</span>
                                    }
                                </div>
                                <div class="stepper-label mt-2">
                                    <small class="d-block font-weight-bold">Step 5</small>
                                    <small class="text-muted">Review</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .wizard-stepper {
        padding: 10px 0;
    }

    .stepper-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
        margin: 0 auto;
    }

    .stepper-line {
        width: 100%;
        height: 2px;
        background-color: #dee2e6;
        margin-top: 25px;
    }

    .stepper-line.completed {
        background-color: #28a745;
    }

    .stepper-item.active .stepper-label {
        font-weight: bold;
        color: #007bff;
    }

    .stepper-item.completed .stepper-label {
        color: #28a745;
    }
</style>